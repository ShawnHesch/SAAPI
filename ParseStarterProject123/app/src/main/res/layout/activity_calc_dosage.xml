<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.CalcDosageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Recommended Dosage is:"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_above="@+id/dosagevalue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5 - 10 mg"
        android:id="@+id/dosagevalue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="of Artiristovienan"
        android:id="@+id/drugname"
        android:layout_below="@+id/dosagevalue"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />
</RelativeLayout>
